@model RoleManageViewModel

<form class="form-horizontal" asp-controller="VolunteerManage" asp-action="RoleManage" method="post" role="form">

    <h4>Assign pages to role.</h4>
    <hr />

    <div class="form-group">
        <label asp-for="RoleNames" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="@Model.SelectedName" class="form-control">
                @foreach (var item in Model.RoleNames)
                {
                    <option value="@item">@item</option>
                }
            </select>

        </div>
    </div>

    <div class="form-group">
        <label asp-for="ControllerNames" class="col-md-2 control-label"></label>
        <div class="col-md-10">

            @foreach (var name in Model.ControllerNames)
            {
                <input type="checkbox" name="SelectedPages" value="@name" />@name<br />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Assign</button>
        </div>
    </div>
</form>
