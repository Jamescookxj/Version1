@section styles{
    <style>
        .single_team {
            padding: 6px;
            position: relative;
            max-height: 400px;
            max-width: 590px;
        }

        .team_img {
           height: 280px;
            width: 570px;
        }

        .overlay {
            position: absolute;
            visibility: visible;
            top: 10%;
            bottom: 10%;
            padding-top:10%;
            padding-left: 20%;
            padding-right: 20%;
            margin-right: 1.5%;
            opacity: 0;
        }

        .single_team:hover .overlay {
            background-color: #808080;
            opacity: 0.8;
            transition: all 200ms;
        }

        .captionlink {
            background: #0094ff;
            width: 100%;
            display: block;
            height: 40px;
            text-align: center;
            line-height: 40px;
            font-size: 20px;
        }

        .single_team:hover .team_img {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            transition: all 200ms;
        }

