@{
}
@model CreateRoleViewModel

<form class="form-horizontal" asp-action="CreateRole" asp-controller="Account" method="post" role="form">
    <h4>Create Role</h4>
    <br />
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="@Model.RoleName"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="@Model.RoleName" />
            <span class="text-danger" asp-validation-for="@Model.RoleName"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-default" type="submit">Create</button>
        </div>
    </div>
</form>